<h1>Cadastra-se</h1>


<%= form_for @user, url: '/sign_up' do |f| %>

    <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
    </div>

    <div>

    <%= f.label :birth_date, 'Data de nascimento' %>
    <%= f.text_field :birth_date %>
    </div>

    <div>
        <%= f.label :phone, 'Telefone' %>
        <%= f.text_field :phone %>
    </div>

    <div>
        <%= f.label :username, 'Usuario' %>
        <%= f.text_field :username %>
    </div>

    <div>
        <%= f.label :password, 'Senha' %>
        <%= f.text_field :password %>
    </div>

    <div>
        <%= f.submit %>
    </div>
<% end %>